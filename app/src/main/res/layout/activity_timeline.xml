<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".timeline">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logoapp"
        android:padding="10dp"
        android:id="@+id/imglogo"
        android:layout_marginTop="120dp"/>

    <TextView
        android:id="@+id/nama_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:text="-TIMELINE KerjaYuk-"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/judul_Table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama_app"
        android:layout_centerHorizontal="true"
        android:text=" Create job or view all job"
        android:textAlignment="center"
        android:textColor="@color/putih"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@id/judul_Table"
        android:layout_gravity="center"
        android:padding="30dp"
        android:gravity="center">
        <Button
            android:id="@+id/btncreatejob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:onClick="klikGabung"
            android:background="@drawable/tex_edit"
            android:textColor="@color/colorAccent"
            android:text="CREATE JOB" />


        <Button
            android:id="@+id/btnviewjob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tex_edit"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorAccent"
            android:onClick="klikGabung"
            android:text="VIEW"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <Button

            android:id="@+id/btnbckHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tex_edit"
            android:textColor="@color/colorAccent"
            android:onClick="klikGabung"
            android:text="Back to Home"/>
    </LinearLayout>

</LinearLayout>